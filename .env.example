# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=1

# Secret key (change in production)
SECRET_KEY=dev-key-change-in-production

# CORS origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000

# API Settings
MAX_RECOMMENDATIONS=10
DEFAULT_RECOMMENDATIONS=5
# Data file (pickle) path. If using Git LFS, run 'git lfs install' and 'git lfs pull' on the server.
DATA_DIR=app/datos_procesados.pkl
# OpenAI API configuration
OPENAI_API_KEY=***
# You can override model if needed, otherwise defaults to gpt-4o-mini
OPENAI_MODEL=gpt-4o-mini
